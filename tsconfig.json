{
  "compilerOptions": {
    "target": "es2022",                      
    "module": "commonjs",                       
    "rootDir": "./src",               
    "outDir": "./dist",                   
    "strict": true,                    
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                      
    "types": ["node"]                           
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/tests"]
}
